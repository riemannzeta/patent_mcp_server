# USPTO API Configuration
USPTO_API_KEY=your_uspto_api_key_here

# USPTO API Endpoints
PPUBS_BASE_URL=https://ppubs.uspto.gov
API_BASE_URL=https://api.uspto.gov

# Google Cloud / BigQuery Configuration
# For Google Patents Public Datasets access
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json
BIGQUERY_DATASET=patents-public-data:patents
BIGQUERY_LOCATION=US
BIGQUERY_QUERY_TIMEOUT=60
BIGQUERY_MAX_RESULTS=1000

# Logging Configuration
LOG_LEVEL=INFO

# HTTP Settings
USER_AGENT=patent-mcp-server/0.2.3
REQUEST_TIMEOUT=30.0

# Rate Limiting & Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
RETRY_MIN_WAIT=2
RETRY_MAX_WAIT=10

# Session Management
SESSION_EXPIRY_MINUTES=30

# Caching
ENABLE_CACHING=true
